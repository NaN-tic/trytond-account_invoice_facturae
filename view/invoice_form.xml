<data>
    <xpath expr="/form/notebook" position="inside">
        <page name="credited_invoices">
            <label name="rectificative_reason_code"/>
            <field name="rectificative_reason_code"/>
            <field name="credited_invoices" colspan="4"/>
        </page>
    </xpath>
    <xpath expr="/form/notebook/page[@id='invoice']/group/group/group[@id='reconciled_state']"
            position="inside">
        <label name="invoice_facturae"/>
        <field name="invoice_facturae"/>
    </xpath>
    <xpath expr="/form/group[@id='buttons']" position="inside">
        <button name="generate_facturae_wizard"
            string="Generate Factura-e" icon="tryton-lock"/>
    </xpath>

    <xpath expr="/form/notebook" position="inside">
        <page id="facturae" string="Factura-e">
            <group id="facturae_fields_information" string="Fields Information" colspan="4">
                <label name="file_reference"/>
                <field name="file_reference"/>
                <label name="receiver_contract_reference"/>
                <field name="receiver_contract_reference"/>
                <separator name="invoice_description" colspan="4"/>
                <field name="invoice_description" colspan="4"/>
            </group>
            <group id="facturae_state_information" string="State Information" colspan="4">
                <label name="invoice_facturae_sent"/>
                <field name="invoice_facturae_sent"/>
                <newline/>
                <separator name="facturae_attachments" colspan="4"/>
                <field name="facturae_attachments" colspan="4"/>
            </group>
        </page>
    </xpath>
</data>
